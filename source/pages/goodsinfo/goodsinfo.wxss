.add_subtract {
  height: 40rpx;
  line-height: 30rpx;
  width: 36rpx;
  text-align: center;
  border: 2rpx solid rgb(219, 219, 219);
}

.left_radius {
  border-radius: 10rpx 0 0 10rpx;
}

.right_radius {
  border-radius: 0 10rpx 10rpx 0;
}

.number_block {
  width: 66rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-top: 2rpx solid rgb(219, 219, 219);
  border-bottom: 2rpx solid rgb(219, 219, 219);
}

.icon_subtract {
  width: 18rpx;
  height: 2rpx;
}

.icon_add {
  width: 18rpx;
  height: 18rpx;
}

.confirm {
  position: absolute;
  bottom: 8%;
  width: 92%;
}

.confirm_button {
  height: 70rpx;
  line-height: 70rpx; 
  border-radius: 36rpx;
  text-align: center;

}

.top_block {
  position: absolute;
  top: 5%;
  width: 92%;
  background: white;
}

.goods_height {
  height: 170rpx;
}

.icon_close {
  width: 40rpx;
  height: 40rpx;
}

.icon_top {
  width: 70rpx;
  height: 70rpx;
}



.under_block {
  position: fixed;
  z-index: 2;
