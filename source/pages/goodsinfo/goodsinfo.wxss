}
.label {
  padding: 0 30rpx 0 30rpx;
  line-height: 50rpx;
  height: 50rpx;
  background: #ff6a0015;
  border-radius: 10rpx;
  color: #FF6900;
}

.label2 {
  padding: 0 30rpx 0 30rpx;
