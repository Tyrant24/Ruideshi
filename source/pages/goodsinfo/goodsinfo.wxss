.swiper {

  position: relative;
}

.imageContainer {
  height: 700rpx;
}

.itemImg {
  width: 100%;
  height: 700rpx;
}

.whiteblock {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 20rpx;
  background: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.block1 {
  position: absolute;
  text-align: center;
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #352f328e;
  border-radius: 20rpx;
  bottom: 10%;
  right: 30rpx;
  color: white;
}

.height-14 {
  height: 14rpx;
  background: #F9F9F8;
}

.padding {
  padding: 20rpx 30rpx 20rpx 30rpx;
}

.youhui {
  padding: 0 20rpx 0 20rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  background: #ff6a0015;
  border-radius: 8rpx;
  color: #FF6900;
}



.overlay {
  background: black;
  opacity: 0.5;
  position: fixed;
  z-index: 2;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
}

.guige {
  position: fixed;
  z-index: 3;
  bottom: 0;
  width: 100vw;
  height: 60vh;
}

.block2 {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  height: 96%;
  padding: 0 30rpx 0 30rpx;
  margin-top: 5%;
}

.img {
  width: 184rpx;
  height: 184rpx;
  position: absolute;
  z-index: 3;
  top: 0;
}

.nullblock {
  width: 194rpx;
